{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "SSMParameterStorePasswordManagement",
            "Effect": "Allow",
            "Action": [
                "ssm:GetParameter",
                "ssm:GetParameters",
                "ssm:PutParameter",
                "ssm:DeleteParameter",
                "ssm:DescribeParameters",
                "ssm:AddTagsToResource"
            ],
            "Resource": [
                "arn:aws:ssm:*:*:parameter/passwords/*"
            ]
        },
        {
            "Sid": "SSMParameterStoreList",
            "Effect": "Allow",
            "Action": [
                "ssm:DescribeParameters"
            ],
            "Resource": "*"
        },
        {
            "Sid": "KMSDecryptForSecureString",
            "Effect": "Allow",
            "Action": [
                "kms:Decrypt"
            ],
            "Resource": [
                "arn:aws:kms:*:*:key/*"
            ],
            "Condition": {
                "StringLike": {
                    "kms:ViaService": "ssm.*.amazonaws.com"
                }
            }
        }
    ]
}